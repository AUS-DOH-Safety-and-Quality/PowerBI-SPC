{
    "compilerOptions": {
        "allowJs": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictBindCallApply": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "remove",
        "removeComments": true,
        "ignoreDeprecations": "5.0",
        "target": "es6",
        "sourceMap": true,
        "outDir": "./.tmp/build/",
        "moduleResolution": "node",
        "declaration": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "./src/visual.ts"
    ],
    "include": ["src/**/*"],
    "typedocOptions": {
        "entryPoints": [
            "./src/Classes/index.ts",
            "./src/D3 Plotting Functions/NHS Icons/index.ts",
            "./src/D3 Plotting Functions/index.ts",
            "./src/Functions/index.ts",
            "./src/Limit Calculations/index.ts",
            "./src/Outlier Flagging/index.ts",
            "./src/defaultSettings.ts",
            "./src/validSettingValues.ts",
            "./src/visual.ts"
        ],
        "readme": "./README.md"
    }
}
